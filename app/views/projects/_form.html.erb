<%= form_for(@project_item) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <h3>Basic Info</h3>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control", rows: 10 %>
      </div>
    </div>
    <div class="col-md-6">
      <h3>Technology Used:</h3>
      <div>
        <%= form.fields_for :technologies do |technology_form| %>
          <div class="form-group" >
            <%= technology_form.label :name %>
            <%= technology_form.text_field :name, class: "form-control" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-group">
        <%= form.submit "Save Project Item", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>
<% end %>

<%= link_to 'Back', projects_path %>
