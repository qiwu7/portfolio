<div class="col-md-4">
  <div class="card mb-4 box-shadow", data-id="<%= project_item.id %>">
    <%= image_tag project_item.thumb_image, width: "100%" if project_item.thumb_image %>
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to project_item.title, project_show_path(project_item) %></span> [<%= project_item.subtitle %>]
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <a href="<%= project_show_path(project_item) %>">
            <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
          </a>
          <% if logged_in?(:site_admin) %>
            <a href="<%= edit_project_path(project_item) %>">
              <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
            </a>
          <% end %>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>
